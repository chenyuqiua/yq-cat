.card1 {
  height: 260rpx;
  margin-top: 20rpx;
  display: flex;
  border: 5px solid #ebe9ef;
  border-radius: 10rpx;
}
.card1 .card1_left {
  width: 40%;
}
.card1 .card1_left image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.card1 .card1_right {
  width: 60%;
  margin-left: 30rpx;
}
.card1 .card1_right .card1_right_1 {
  width: 100%;
  display: flex;
}
.card1 .card1_right .card1_right_1 text:nth-child(1) {
  font-size: 18px;
  font-weight: 1000;
  margin-right: 10rpx;
}
.card1 .card1_right .card1_right_1 text:nth-child(3) {
  font-size: 17rpx;
  background-color: #948ad7;
  align-self: center;
  padding: 2rpx 10rpx;
  border-radius: 15rpx;
}
.card1 .card1_right .card1_right_1 view {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.card1 .card1_right .card1_right_1 view image {
  width: 100%;
  height: 100%;
}
.card1 .card1_right .card1_right_2 {
  position: relative;
  display: flex;
  flex-wrap: wrap;
}
.card1 .card1_right .card1_right_2 view {
  margin-right: 60rpx;
}
.card1 .card1_right .card1_right_2 view text {
  color: var(--color-gray-dark);
  font-size: 25rpx;
  font-weight: 600;
}
.card1 .card1_right .card1_right_2 view image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
}
.card1 .card1_right .card1_right_2 view:nth-child(2) {
  margin-left: -30rpx;
}
.card1 .card1_right .card1_right_2 view:nth-child(3),
.card1 .card1_right .card1_right_2 view:nth-child(4) {
  margin-top: -20rpx;
}
.card1 .card1_right .card1_right_2 view:nth-child(3) {
  margin-right: 20rpx;
  box-sizing: border-box;
}
.card1 .card1_right .card1_right_2 view:nth-child(4) {
  margin-left: 60srpx;
}
.card1 .card1_right .card1_right_3 {
  width: 93%;
  color: #717171;
  font-size: 25rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.card1 .card1_right .card1_right_4 text:nth-child(1) {
  font-size: 20rpx;
  background-color: #948ad7;
  align-self: center;
  padding: 4rpx 12rpx;
  border-radius: 15rpx;
}
.card1 .card1_right .card1_right_4 image {
  margin-left: 200rpx;
  width: 30rpx;
  height: 28rpx;
}
.card1 .card1_right .card1_right_4 text:nth-child(3) {
  margin-left: 8rpx;
  font-size: 30rpx;
}
