/* miniprogram/pages/genealogy/genealogy.wxss */
@import "/pages/public/wxss/hFilter.wxss";

page {
  height: 100%;
  background-color: var(--color-gray-light);
}
/* 下面开始猫卡布局 */
scroll-view {
  -webkit-overflow-scrolling: touch;
  z-index: 0;
  background-color: var(--color-gray-light);
}

.cards{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.loading image {
  width: 165.9rpx;
  height: 90.3rpx;
  margin: 10rpx 292rpx;
}
.loadnomore image {
  width: 750rpx;
  height: 100rpx;
  margin: 40rpx 0;
}

/* 新图标签 */
.card .label {
  display: inline-block;
  text-align: left;
  background-color: var(--color-primary);
  border-color: var(--color-primary-dark);
  color: var(--color-black-light);
  border-radius: 0 10rpx 10rpx 0;
  padding: 10rpx;
  font-size: 22rpx;
  position: absolute;
  top: 30rpx;
  left: -17.5rpx;
  z-index: 1;
}

.card .label::after {
    position: absolute;
    top: 100%;
    right: auto;
    left: 0;

    border-style: solid;
    border-width: 0 17.5rpx 17.5rpx 0;
    border-color: transparent;
    border-top-color: inherit!important;
    background-color: transparent!important;
    border-right-color: inherit!important;

    content: '';
    width: 0;
    height: 0;
}

/* 广告栏 */

.card-ad {
  margin: 15rpx 0;
  width: 635rpx;
  border-radius: 15rpx;
  background-color: white;
  box-shadow: 13rpx 13rpx 30rpx var(--color-gray);
  overflow: hidden;

  display: flex;
  justify-content: center;
  align-items: center;

  min-height: 200rpx;
  box-sizing: border-box;

}

.card-ad.hidden {
  display: none;
}

/* 顶部的搜索框还有筛选 */
#search {
  width: 750rpx;
  background-color: var(--color-gray-light);
  box-sizing: border-box;

  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
}

#search.shadow {
  box-shadow: 0 0 10rpx var(--color-gray);
}

#search .input-block {
  width: 87%;
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  margin-left: 25rpx;
}

#search .input-icon {
  width: 10%;
  height: 2.2rem;
  background-color: white;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  display: inline-block;
}

#search .input-icon image {
  width: 60%;
  height: 100%;
  margin: 0 20%;
}

#search input.name {
  width: 90%;
  height: 2.2rem;
  line-height: 2.2rem;
  background-color: white;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  display: inline-block;
  box-sizing: border-box;
  margin: 0;

  font-size: 80%;
}

#search .filter-btn {
  width: 10%;
  height: 55%;
  padding: 10rpx 0 10rpx 20rpx;
}

.filter-btn image {
  width: 70%;
  height: 100%;
}

/* 过滤器点开的部分 */
#filter-block {
  width: 750rpx;
  position: fixed;
  z-index: 2;
  background-color: rgba(0, 0, 0, .8);
}


#filter-block .filters {
  width: 100%;
  background-color: white;
  display: flex;
  flex-wrap: nowrap;
}

.f-column {
  padding: 0rpx 10rpx;
  height: 400rpx;
}
.f-column .padding-block {
  height: 20rpx;
}
.f-column-1 {
  width: 31%;
  box-sizing: border-box;
}

.f-column .item {
  height: 40rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  margin: 10rpx;
  padding: 2rpx 20rpx;
  display: inline-flex;
  flex-wrap: nowrap;
  border: 3rpx solid transparent;
}

.f-column .item.active {
  color: var(--color-primary);
  border: 3rpx solid var(--color-primary);
  border-radius: 40rpx;
}

.f-column.main .item.active {
  color: black;
  background-color: var(--color-primary);
  border-radius: 40rpx;
}

.f-column .item .right-arrow {
  width: 20rpx;
  height: 40rpx;
  margin-left: 10rpx;

  display: inline-block;
}

.right-arrow image {
  height: 20rpx;
  width: 20rpx;
}

#filter-block .divider {
  width: 100%;
  height: 1rpx;
  background-color: var(--color-gray);
}

#filter-block .buttons {
  width: 100%;
  background-color: var(--color-gray);
  display: flex;
  justify-content: space-between;
}

#filter-block .buttons .btn {
  /* 留1rpx给中间的分割线 */
  width: 374.8rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  background-color: white;
  color: var(--color-gray-dark);
  text-align: center;
}

#filter-block .buttons .active {
  color: var(--color-primary);
}

.searchPlaceholderStyle{
  display: flex;

}

/* 寻找领养按钮 */
#find-adopt {
  position: fixed;
  bottom: 300rpx;
  right: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;

  filter: drop-shadow(0 0 5rpx var(--color-gray-dark));
}

/* 返回首页 */
#back-to-firstpage {
  position: fixed;
  bottom: 200rpx;
  right: 30rpx;

  filter: drop-shadow(0 0 5rpx var(--color-gray-dark));
}

#find-adopt .logo {
  width: 99rpx;
  height: 50rpx;
  display: block;
}

#find-adopt .count {
  font-size: 20rpx;
  padding: 1rpx 10rpx;
  background-color: var(--color-primary);
  border-radius: 5rpx;
  color: var(--color-black-light);
}

.adopt-filter-tip {
  position: fixed;
  top: 100rpx;
  right: 20rpx;
  opacity: 1;

  transition: top 1s, opacity 1s;
}

.adopt-filter-tip.hide {
  opacity: 0;
  top: 50rpx;
}

.adopt-filter-tip .tri {
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 0 10rpx 10rpx 10rpx;
  border-color: transparent transparent var(--color-black-transparent) transparent;

  position: absolute;
  right: 20rpx;
}

.adopt-filter-tip .content {
  width: 180rpx;
  text-align: center;
  font-size: 22rpx;
  padding: 10rpx;
  background-color: var(--color-black-transparent);
  color: white;

  border-radius: 10rpx;
  
  position: absolute;
  right: 0;
  top: 10rpx;
}

.shake {
  /* 摇晃动画 */
  animation-name: upAnimation;
  animation-duration: 2s;
  animation-fill-mode: both;
  animation-iteration-count: 6;
  animation-delay: 2s;
}
@keyframes upAnimation {
  0% {
      transform: rotate(0deg);
      transition-timing-function: cubic-bezier(0.215, .61, .355, 1)
  }

  10% {
      transform: rotate(-12deg);
      transition-timing-function: cubic-bezier(0.215, .61, .355, 1)
  }

  20% {
      transform: rotate(12deg);
      transition-timing-function: cubic-bezier(0.215, .61, .355, 1)
  }

  28% {
      transform: rotate(-10deg);
      transition-timing-function: cubic-bezier(0.215, .61, .355, 1)
  }

  36% {
      transform: rotate(10deg);
      transition-timing-function: cubic-bezier(0.755, .5, .855, .06)
  }

  42% {
      transform: rotate(-8deg);
      transition-timing-function: cubic-bezier(0.755, .5, .855, .06)
  }

  48% {
      transform: rotate(8deg);
      transition-timing-function: cubic-bezier(0.755, .5, .855, .06)
  }

  52% {
      transform: rotate(-4deg);
      transition-timing-function: cubic-bezier(0.755, .5, .855, .06)
  }

  56% {
      transform: rotate(4deg);
      transition-timing-function: cubic-bezier(0.755, .5, .855, .06)
  }

  60% {
      transform: rotate(0deg);
      transition-timing-function: cubic-bezier(0.755, .5, .855, .06)
  }

  100% {
      transform: rotate(0deg);
      transition-timing-function: cubic-bezier(0.215, .61, .355, 1)
  }
}


#back-to-firstpage .back-btn {
  width: 80rpx;
  height: 80rpx;
  margin: 0rpx 10rpx;
  display: block;
}

.news-container {
  z-index: 99;
}
