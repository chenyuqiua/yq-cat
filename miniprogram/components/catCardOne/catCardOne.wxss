/* 下面开始猫卡布局 */
.card .label {
  display: inline-block;
  text-align: left;
  background-color: var(--color-primary);
  border-color: var(--color-primary-dark);
  color: var(--color-black-light);
  border-radius: 0 10rpx 10rpx 0;
  padding: 10rpx;
  font-size: 22rpx;
  position: absolute;
  top: 30rpx;
  left: -17.5rpx;
  z-index: 1;
}

.card .label::after {
  position: absolute;
  top: 100%;
  right: auto;
  left: 0;

  border-style: solid;
  border-width: 0 17.5rpx 17.5rpx 0;
  border-color: transparent;
  border-top-color: inherit!important;
  background-color: transparent!important;
  border-right-color: inherit!important;

  content: '';
  width: 0;
  height: 0;
}

.card {
  margin: 30rpx 0;
  font-size: 24rpx;
  line-height: 24rpx;
  width: 635rpx;
  border-radius: 15rpx;

  box-sizing: border-box;
  background-color: white;

  box-shadow: 13rpx 13rpx 30rpx var(--color-gray);
  position: relative;
  /* TODO：重写为flex布局 */
}

.card view.image {
  height:590rpx;
  border-radius: 15rpx 15rpx 0 0;
  position: relative;
  overflow: hidden;
}

.card view.image .image-title{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  background-color: var(--color-black-light);
  opacity: .4;
  text-align: center;
  color: white;
  position: absolute;
  bottom: 0;
}

.card view.image image {
  width: 100%;
  height: 590rpx;
  background-color: var(--color-gray-light);
	background-image: url(data:image/svg+xml;base64,);
  background-position: center center;
  background-repeat: no-repeat;
  background-size: 50% 50%;
  position: absolute;
}

.card view.image.to_star image {
  filter: grayscale(100%);
}

.card .info {
  padding: 35rpx 35rpx 20rpx 35rpx;
}

.card .hoverInfo{
  background-color: var(--color-gray-light);
  border-radius: 15rpx;
}

.card .info .name {
  height: 30rpx;
  font-size: 33rpx;
  line-height: 30rpx;

  font-weight: 600;
  letter-spacing: 2rpx;
}

.card .info image.gender {
  height: 27rpx;
  width: 27rpx;
  margin-right: 15rpx;
  margin-left: 8rpx;
}

.card .info .adopt {
  padding: 0 10rpx;
  height: 30rpx;
  border-radius: 15rpx;
  font-size: 18rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: var(--color-primary);
  margin-left: 8rpx;
}

.card .info .to_star {
  height: 30rpx;
  border-radius: 15rpx;
  font-size: 18rpx;
  line-height: 30rpx;
  text-align: center;
  background-color: var(--color-gray-light);
  
  padding: 0 10rpx;
  margin: 0 10rpx;
}

.card .info .popularity {
  margin-left: auto;
  order: 2;
  display: flex;
  align-items: center;
}
.popularity image {
  height: 20rpx;
  width: 35rpx;
  margin-right: 8rpx;
}

.card .info .comment {
  margin-left: 15rpx;
  order: 2;
  display: flex;
  align-items: center;
}
.comment image {
  height: 27rpx;
  width: 27rpx;
  margin-right: 8rpx;
}

.card .line {
  display: flex;
  /* align-items: flex-start; */
  vertical-align: baseline;
  margin-bottom: 10rpx;

  color: var(--color-black-min);
  line-height: 1.05rem;
}

.card .line:first-child{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  margin-left: 3rpx;
}

.card .line image.icon {
  height: 28rpx;
  width: 28rpx;
  min-width: 26rpx;
  margin-right: 20rpx;
  vertical-align: text-top;
}

.card .line .index {
  margin-left:auto;
  order:2;
  color: var(--color-gray);
}

.card .line .characteristics{
  line-height: 1.05rem;
  vertical-align: text-top;
}

.card .line .habit{
  line-height: 1.05rem;
  vertical-align: text-top;
}

